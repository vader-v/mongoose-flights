<%- include('../partials/html-head') %>

<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Flight Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport:</div>
    <div><%= flight.airport %></div>
    <div>Flight #:</div>
    <div><%= flight.flightNo %></div>
    <div>Departs:</div>
    <div><%= flight.departs %></div>
    <a href="../flights/<%= flight._id %>/edit">Edit</a>
    <h2>List of Tickets</h2>
<ul>
  <% flight.tickets.forEach(ticket => { %>
    <li>Ticket ID: <%= ticket._id %></li>
    <li>Seat: <%= ticket.seat %></li>
    <li>Price: <%= ticket.price %></li>
  <% }) %>
  </ul>
  <a href="/flights/<%=flight._id%>/tickets/new">Create new ticket here</a>

<h3>Meals</h3>
<ul>
  <% flight.meals.forEach(meal => { %>
    <li>Meal: <%= meal.name %></li>
  <% }) %>
  </ul>
  <p>Please add the Meals for this flight in the dropdown:
    <form action="/flights/<%= flight._id %>/meals" method="POST">
      <label for="meal">Add Meal:</label>
      <select name="meal" id="meal">
      <% meals.forEach(function(meal) { %>
        <option value="<%= meal._id %>"><%= meal.name %></option>
      <% }) %>
    </select>
    <button type="submit">Add Meal</button>
    </form>
</section>


</main>

<%- include('../partials/footer') %>